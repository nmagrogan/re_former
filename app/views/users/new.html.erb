<!-- HTML form - no rails helpers -->
<form action="/users" method="post" accept-charset="UTF-8">

    <label for="username">Username:</label>
    <input type="text" name="user[username]" id="username">

    <label for="email">Email:</label>
    <input type="text" name="user[email]" id="email">

    <label for="password">Password:</label>
    <input type="password" name="user[password]" id="password">

    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <input type="submit" value="Submit This Form">
</form>


<!-- Railsy Form pt 1 -->

<%= form_with(url: "/users", method: "post") do %>
  <%= label_tag(:username, "Username:") %>
  <%= text_field(:user, :username) %>

  <%= label_tag(:email, "Email:") %>
  <%= text_field(:user, :email) %>

  <%= label_tag(:password, "Password:") %>
  <%= password_field(:user, :password) %>

  <%= submit_tag("Submit This Form") %>
<% end %>

<!-- Railsy Form pt 2, more helpers -->
<%= form_with model: @user do |f| %>
  <%= f.label :username, "Username:" %>
  <%= f.text_field :username %>

  <%= f.label :email, "Email:" %>
  <%= f.text_field :email %>

  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %>

  <%= f.submit "Submit This Form" %>

<% end %>
